{
    "compilerOptions": {
        "outDir": "./dist",
        "allowJs": false,
        "target": "ESNext",
        "module": "commonjs",
        "lib": ["ESNext"],
        "checkJs": false,
        "incremental": true,
        "alwaysStrict": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "moduleResolution": "node"
    },
    "include": [
    "./lib/**/*",
    ],
    "exclude": ["node_modules", "**/*.spec.ts", "tests/**/*.test.ts"]
}